<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
<suite name="Browsers Tests" verbose="1" parallel="tests" thread-count="99">

    <test name="Chrome Execution">
        <parameter name="browser" value="chrome"/>
        <parameter name="execution" value="local"/>
        <classes>
            <class name="br.com.matheus.tests.AboutGridTest" />
            <class name="br.com.matheus.tests.ProjectsTest" />
        </classes>
    </test>

    <test name="Firefox Execution">
        <parameter name="browser" value="firefox"/>
        <parameter name="execution" value="local"/>
        <classes>
            <class name="br.com.matheus.tests.AboutGridTest" />
            <class name="br.com.matheus.tests.ProjectsTest" />
        </classes>
    </test>

    <test name="Edge Execution">
        <parameter name="browser" value="edge"/>
        <parameter name="execution" value="local"/>
        <classes>
            <class name="br.com.matheus.tests.AboutGridTest" />
            <class name="br.com.matheus.tests.ProjectsTest" />
        </classes>
    </test>

</suite>